<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 maximum-scale=1.0, user-scalable=no" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/unosprijave.css" />
    <title>ИСПОЈ</title>
    <link rel="icon" href="/images/logo.png" type="image/icon type" />
  </head>

  <body>
    <%- include("partials/header.ejs") %> <%- include("partials/logout.ejs") %>

    <main>
      <%- include("partials/welcome.ejs") %>
      <form action="/applications/apply" method="POST">
        <article id="datefrom">
          <label for="dateFrom">Datum odlaska:</label>
          <input type="date" id="datefrom" name="dateFrom" />
        </article>
        <article id="dateto">
          <label for="dateTo">Datum povratka:</label>
          <input type="date" id="dateto" name="dateTo" />
        </article>
        <% if (types.length > 0) { %>
        <article id="radio">
          <% for (let type of types) { %>
          <span>
            <input type="radio" name="typeId" value="<%= type.id %>" />
            <label><%= type.name %></label>
          </span>
          <% } %>
        </article>
        <% } %>
        <article id="start">
          <button type="submit">ПРИЈАВИ</button>
        </article>
      </form>

      <p id="message"></p>
    </main>
  </body>
</html>
